@model LosProfes.Models.Profesor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Profesor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NombreUsuario)
        </dd>
        <dt class="col-sm-2">
            Formación
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (ProfesorFormacion profesorFormacion in Model.ProfesoresFormaciones)
                {
                    <li>@profesorFormacion.Formacion.Nombre</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Materias
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (ProfesorMateria profesorMateria in Model.ProfesoresMaterias)
                {
                    <li>@profesorMateria.Materia.Nombre</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Idiomas
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (ProfesorIdioma profesorIdioma in Model.ProfesoresIdiomas)
                {
                    <li>@profesorIdioma.Idioma.Nombre</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole("profe"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>@: |
    }
    <a asp-action="Index">Back to List</a>
</div>
